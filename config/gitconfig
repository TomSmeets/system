[alias]
    lg   = log --graph --abbrev-commit --decorate --oneline --all
    lgf  = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %ae%C(reset)%C(bold yellow)%d%C(reset)' --all
    lgr = lg --reflog
    lgs = lg --simplify-by-decoration
    c = commit -v
    a  = add
    ap = add -p
    s = status
    o = checkout
